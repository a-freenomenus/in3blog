<% title "Static pages" %>
<ul>
  <% for page in @pages %>
    <li>
      <%=h page.permalink %>
      <%= link_to "Show", '' %> | 
      <%= link_to "Edit", edit_admin_page_path(page) %> | 
      <%= link_to "Destroy", admin_page_path(page), :confirm => 'Are you sure?', :method => :delete %>
    </li>
  <% end %>
</ul>

<p><%= link_to "New static page", new_admin_page_path %></p>
