<% form_for @page, :url => (@page.new_record? ? admin_pages_path : admin_page_path(@page)) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :permalink %><br />
    <%= f.text_field :permalink %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body, :cols => 100, :rows => 30 %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
