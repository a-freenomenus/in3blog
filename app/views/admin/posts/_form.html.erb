<% content_for :head do %>
  <%= include_tiny_mce_if_needed %>
<% end %>

<% form_for @post, :url => @post.new_record? ? admin_posts_path : admin_post_path(@post) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body, :class => "mceEditor" %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
