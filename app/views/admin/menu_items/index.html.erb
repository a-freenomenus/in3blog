<% title "Menu Items" %>

<table>
  <thead>
    <tr>
      <th width="200">Name</th>
      <th width="100">Url</th>
      <th>Visible</th>
    </tr>
  </thead>
  <tbody id="items">
    <% for menu_item in @menu_items %>
      <tr id="item_<%= menu_item.id %>">
        <td>
          <span class="handle">[drag]</span>
          <%=h menu_item.name %>
        </td>
        <td><%=h menu_item.url %></td>
        <td>
          <% if menu_item.visible %>
            <%= image_tag 'eye.png' %>
          <% end %>
        </td>
        <td><%= link_to "Edit", edit_admin_menu_item_path(menu_item) %></td>
        <td><%= link_to "Destroy", admin_menu_item_path(menu_item), :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to "New Menu Item", new_admin_menu_item_path %></p>

<%= sortable_element("items", :url => sort_admin_menu_items_path, :handle => "handle") %>
