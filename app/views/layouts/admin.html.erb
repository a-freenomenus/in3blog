<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title><%= h(yield(:title) || "Untitled") %></title>
    <%= javascript_include_tag :defaults %>
    <%= stylesheet_link_tag 'application' %>
    <%= stylesheet_link_tag 'admin' %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">

      <%= render :partial => 'partials/user_bar' %>

      <%- flash.each do |name, msg| -%>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <%- end -%>
      
      <ul class="inline">
        <li><%= link_to_unless_current 'User invitations', admin_invitations_path %></li>
        <li><%= link_to_unless_current 'Audios', admin_audios_path %></li>
        <li><%= link_to_unless_current 'Static pages', admin_pages_path %></li>
      </ul>
      
      <%- if show_title? -%>
        <h1><%=h yield(:title) %></h1>
      <%- end -%>
      
      <%= yield %>
    </div>
  </body>
</html>
